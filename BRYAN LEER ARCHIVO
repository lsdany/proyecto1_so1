// Librerias a utilizar
#include <iostream>
#include <cstdlib>
#include <fstream>
using namespace std;

// variables globales
string linea, texto;
string ruta = "C:/Users/User/Desktop/inge.txt"; // ojo debe ser con la barra "/" y no la "\"

// manu principal 
int main (){

ifstream archivo (ruta); // abrir archivo 


while (getline(archivo, linea)){ 
  texto = texto + linea+ "\n";
} // while para leer linea por linea el texto del archivo 

archivo.close(); // cerrar archivo 

cout << texto << endl; // mostar en consola el texto del archivo 

  return (0);
}
