vector<string> getProcessByLine()
{        
    string ruta;
    cout << "Ingresa la ruta de su archivo: ";
    cin >> ruta;
    string linea, texto;
    ifstream archivo(ruta);
    vector<string> lineas;
    while (getline(archivo, linea)){
    texto = linea;
    lineas.push_back(texto);   
    }
    archivo.close();
    return lineas;
}


